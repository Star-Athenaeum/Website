@if (RoadmapV1State.Roadmap_v1_IsStatisticsVisible[CardData.MajorVersion + "." + CardData.MinorVersion])
{
    <RoadmapCardInformationStatistics CardData="CardData" AvailableDates="AvailableDates" />
    <hr />
}
@if (RoadmapV1State.Roadmap_v1_IsPatchNotesVisible[CardData.MajorVersion + "." + CardData.MinorVersion])
{
    <RoadmapCardInformationPatchList CardData="CardData" />
    <hr />
}

@inject RoadmapV1State RoadmapV1State

@code {

    [Parameter]
    public RoadmapCardData CardData { get; set; }

    [Parameter]
    public List<DateTime> AvailableDates { get; set; }

    protected override async Task OnInitializedAsync()
    {
        RoadmapV1State.Roadmap_v1_OnStatisticsVisibilityToggle += StateHasChanged;
        RoadmapV1State.Roadmap_v1_OnPatchNotesVisibilityToggle += StateHasChanged;
        await base.OnInitializedAsync();
    }
}
