@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" prefix="og: https://ogp.me/ns#">
<head>
    <Meta charset="UTF-8" />
    <base href="~/" />
    <!-- Primary Meta Tags -->
    <title>The Star Athenaeum Project</title>
    <link rel="icon" type="image/svg" href="favicon.svg" />
    <meta name="title" content="The Star Athenaeum Project" />
    <meta name="description" content="Home to the cutting edge corner of the verse, where each and every citizen, pirate, syndicate leader and alike can learn a little more." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="theme-color" content="#38a0a0" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ueesa.net/" />
    <meta property="og:title" content="The Star Athenaeum Project" />
    <meta property="og:description" content="Home to the cutting edge corner of the verse, where each and every citizen, pirate, syndicate leader and alike can learn a little more." />
    <meta property="og:image" content="https://ueesa.net/pwa-192.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content="https://ueesa.net/" />
    <meta property="twitter:title" content="The Star Athenaeum Project" />
    <meta property="twitter:description" content="Home to the cutting edge corner of the verse, where each and every citizen, pirate, syndicate leader and alike can learn a little more." />
    <meta property="twitter:image" content="https://ueesa.net/pwa-192.png" />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/pwa-192.png" />

    <style type="text/css">
        #loading-overlay {
            z-index: 1000001;
            background-image: linear-gradient(to right, rgba(0, 0, 0, 0.95), rgba(25, 25, 25, 0.95));
            backdrop-filter: blur(25px);
            position: fixed;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
            pointer-events: none;
        }

            #loading-overlay img {
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translateX(-50%) translateY(-50%);
            }

            #loading-overlay.loading-overlay-first img {
                animation: colorInvert 1s ease-out;
            }

            #loading-overlay .progress {
                position: fixed;
                left: 0px;
                bottom: 0px;
                height: 40px;
                width: 100vw;
                padding: 0px;
                margin: 0px;
            }

        .progress-bar3 {
            transition: 0.4s linear;
            transition-property: width, background-color;
            height: 100%;
        }

        .progress-infinite .progress-bar3 {
            width: 100%;
            background-image: linear-gradient(to right, rgba(0, 0, 0, 0) 40%, rgba(255, 255, 255, 0.25) 50%, rgba(0, 0, 0, 0) 60%), linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(225, 225, 225, 0.1) 50%);
            animation: progress-bar 1s linear infinite;
        }

        @@keyframes progress-bar {
            0% {
                background-position-x: -100vw;
            }

            100% {
                background-position-x: 200vw;
            }
        }

        @@keyframes colorInvert {
            0% {
                filter: invert(100%);
            }

            100% {
                filter: invert(0%);
            }
        }
    </style>
    <link type="text/css" rel="stylesheet" href="bundle.min.css" />
</head>
<body>
    <noscript>
        This website requires Javascript. If you dont have Javascript enabled, you must find out how to enable it.
        For no reason should Javascript be disabled in the modern day.
    </noscript>
    <app>
        <div id="loading-overlay" class="loading-overlay-first">
            <img draggable="false" height="300" width="300" src="favicon.svg" alt="Logo" />
            <div class="progress progress-infinite">
                <div class="progress-bar3" />
            </div>
        </div>
    </app>
    <component type="typeof(SA.Web.Client.App)" render-mode="WebAssembly" />
